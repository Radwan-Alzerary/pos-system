<%- include('header'); %>

    <div class="w-full p-5 h-full overflow-auto px-5">
        <form method="POST" action="/table/addtable">
            <div class="text-right font-medium text-lg mb-4">
                <a>اضافة طاولة</a>
            </div>
            <div class="text-right font-medium text-lg flex justify-end">

                <select id="countries" name="tablenum"
                    class="bg-gray-50 border border-gray-300 text-right w-1/2 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    <% for (var i=1; i <=100; i++) { %>
                        <% var found=false; %>
                            <% table.forEach(function(tables) { %>
                                <% if (tables.number===i) { %>
                                    <% found=true; %>
                                        <% } %>
                                            <% }) %>
                                                <% if (found) { continue; } %>
                                                    <%= i %>
                                                        <option value="<%=i%>">
                                                            <%=i%>
                                                        </option>
                                                        <%}%>
                </select>
            </div>
            <div class="w-full flex items-center justify-end">
                <input type="submit" value="اضافة طاولة"
                    class="w-1/4 rounded-lg h-12 bg-green-200 cursor-pointer hover:bg-green-400">
            </div>
        </form>
        <div class="w-full flex">
            <div class="w-1/4 flex justify-center items-center">
                <img src="<%=setting[0].shoplogo%>">
            </div>
            <form action="/setting/update"  method="POST" enctype="multipart/form-data"
                class="flex flex-col my-4 pb-5 float-right justify-center gap-5 items-center  w-3/4 h-5/6 bg-white p-5 rounded-xl z-50">
                <div class="text-right w-full font-medium text-lg mb-4">
                    <a class="text-right">اعدادات المتجر</a>
                </div>

                <div class="mb-6 w-full">
                    <label for="default-input"
                        class="block text-right mb-2 text-sm font-medium text-gray-900 dark:text-white">اسم
                        المتجر</label>
                    <input  value="<%=setting[0].shopname%>" type="text" placeholder="قم بادخال الاسم" name="name" id="default-input"
                        class="bg-gray-50 text-right border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required>
                </div>

                <div class="mb-6 w-full">
                    <label for="default-input"
                        class="block text-right mb-2 text-sm font-medium text-gray-900 dark:text-white">العنوان</label>
                    <input  value="<%=setting[0].adress%>" type="text" placeholder="قم بادخال العنوان" name="adress" id="default-input"
                        class="bg-gray-50 text-right border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required>
                </div>
                <div class="mb-6 w-full">
                    <label for="default-input"
                        class="block text-right mb-2 text-sm font-medium text-gray-900 dark:text-white">رقم الهاتف</label>
                    <input  value="<%=setting[0].phonnumber%>" type="text" placeholder="قم بادخال رقم الهاتف" name="phonnumber" id="default-input"
                        class="bg-gray-50 text-right border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required>
                </div>

                <div class="mb-6 w-full">
                    <label for="default-input"
                        class="block text-right mb-2 text-sm font-medium text-gray-900 dark:text-white">ايبي جهاز
                        الطباعة</label>
                    <input value="<%=setting[0].printerip%>" type="text" placeholder="قم بادخال الايبي" name="printerip" id="default-input"
                        class="bg-gray-50 text-right border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        required>
                </div>


                <label class="block mb-2 text-sm font-medium text-gray-900 ml-auto dark:text-white"
                    for="file_input">اضافة
                    صورة
                    الوكو</label>

                <input name="image"
                    class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400"
                    aria-describedby="file_input_help" id="file_input" type="file">

                <input type="text" id="foodcategoryid" name="foodcategoryid" class="hidden">

                <input type="submit" class="w-full h-11 bg-green-300 hover:bg-green-400 rounded-lg cursor-pointer"
                    value="تعديل">

            </form>
        </div>

    </div>

    <%- include('footer'); %>